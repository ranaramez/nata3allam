          %span.country-name="#{translate('egypt')} "
        %b="#{translate('phone')}:"
        %span.tel +1 (514)456 7899
        %br/
        %b="#{translate("email")}:"
        %span.email net3allem@hotmail.com
        %br/
        %b="#{translate('website')}:"
        %span.url www.net3allem.com
        %br/
  .clear
.clear
