.student-content
  .candidate.radius.grid_4{style: "height: 360px; overflow: auto;"}
    .candidate-margins
      %a{href: student_path(@student)}
        %img.attachment-candidate-thumb.wp-post-image{ height: "235", src: "#{@student.avatar_preview_url}", width: "224"}/
        .name
          = @student.first_name
  .students-preview.grid_9
    .toggle-content
      .expand-button.close

        %p
          %i.icon-user
          %span.padded-left
            = translate('basic')
      .expand{style: "display: block;"}
        %ul
          %li
            %span
              %b= "#{translate('name')} :"
            %span=@student.full_name  
          %li
            %span
              %b= "#{translate('age')}  :"
            - if @student.date_of_birth.present?
              %span=format_number(@student.age)
            - else
              = translate('NA')
          %li
            %span
              %b="#{translate('birth')} :"
            - if @student.date_of_birth.present?
              %span= format_number(@student.date_of_birth.to_date.day.to_s)
              %span= format_number(@student.date_of_birth.to_date.month.to_s)
              %span= format_number(@student.date_of_birth.to_date.year.to_s)
            - else
              = translate('NA')
          %li
            %span
              %b= "#{translate('class')} :"
            %span=@student.n_class.name
    .toggle-content
      .expand-button
        %p
          %i.icon-bar-chart
          %span.padded-left
            = translate('progress')
      .expand
        - progress = @student.get_student_progress
        - progress_count = progress.values.inject(:+)
        .student-eval
          - if progress_count > 0
            - progress.each do |subject, progress_info|
              = subject
              .progress.progress-mini.progress-primary.count-outside
                .count.span2
                  = "#{progress_info}%"
                .bar{style: "width: #{progress_info}%;"}
          - else
            %span=translate("empty_progress")
    .short-content.padded-top
      .entry-meta    
        %p.sponsors.fleft
          %i.icon-heart-empty
          = format_number(@student.sponsors_count) +" " +translate("sponsors")
        %p.fund.fleft
          %i.icon-credit-card
          = translate("amount")
        %a.buttons.fright.purple{href: "#", title: "Sponsor"}
          =translate("sponsor")
  %div.clear